{
    "name": "php-rpn/rpn",
    "description": "Reverse Polish Notation implementation in PHP",
    "type": "library",
    "license": ["MIT"],
    "keywords": [
        "rpn",
        "reverse polish notation",
        "calculator",
        "expression evaluation"
    ],
    "autoload": {
        "psr-4": {
            "Rpn\\": "src/",
            "Rpn\\Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Olexandr Mazur",
            "email": "alexandrmazur96@gmail.com"
        }
    ],
    "require": {
        "php": ">=8.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.5",
        "vimeo/psalm": "^6.5",
        "squizlabs/php_codesniffer": "^4.0",
        "slevomat/coding-standard": "^8.25",
        "psalm/plugin-phpunit": "^0.19.3",
        "php-parallel-lint/php-parallel-lint": "^1.4"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "test": "phpunit --colors=always",
        "psalm": "psalm --show-info=true --no-cache",
        "phpcs": "phpcs src/ tests/",
        "lint": "parallel-lint src/ tests/"
    }
}
